<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"/>

    <bozovic.nemanja.threestatebutton.ThreeStateButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        app:drawableInitial="@drawable/abc_btn_check_to_on_mtrl_015"
        app:drawableClicked="@drawable/abc_btn_check_to_on_mtrl_015"
        app:drawableUnclicked="@drawable/abc_btn_check_material"

        app:textInitial="Nepritisnuto"
        app:textClicked="PRITISNUTO"
        app:textUnClicked="Nepritisnuto"

        app:textColorInitial="@android:color/black"
        app:textColorClicked="@android:color/holo_green_light"
        app:textColorUnClicked="@android:color/black"
        />

    <bozovic.nemanja.threestatebutton.ThreeStateButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton2"

        app:drawableInitial="@drawable/abc_btn_check_to_on_mtrl_015"
        app:drawableClicked="@drawable/abc_btn_check_to_on_mtrl_015"
        app:drawableUnclicked="@drawable/abc_btn_check_material"

        app:textInitial="Nepritisnuto"
        app:textClicked="PRITISNUTO"
        app:textUnClicked="Nepritisnuto"

        app:textColorInitial="@android:color/black"
        app:textColorClicked="@android:color/holo_orange_light"
        app:textColorUnClicked="@android:color/black"

        android:layout_alignTop="@+id/toggleButton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_below="@+id/toggleButton2"
        android:layout_toRightOf="@+id/toggleButton"
        android:layout_toEndOf="@+id/toggleButton"
        android:layout_marginTop="108dp"/>

</RelativeLayout>
